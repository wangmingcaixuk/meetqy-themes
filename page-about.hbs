{{!< default}}

{{#post}}

  <article class="page-about {{post_class}}">
    {{> material-cover}}
    <div class="profile-container animated fade-in">
        <div class="post-card animated">
            <div class="post-container">
                <div class="post-header">
                     <h1 id="post-title">
                        {{{title}}}
                    </h1>
                    {{> social}}
                </div>
                 <div class="post-content">
                    {{content}}
                </div>
            </div>
        </div>
    </div>
  </article>

{{/post}}
